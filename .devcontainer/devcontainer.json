// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"dockerFile": "Dockerfile",
	"build": {
		"args": {
			"WORKSPACE": "${containerWorkspaceFolder}"
		}
	},
	"runArgs": [
		"--name=ros_hardware_nodes",
		"--network=host",
		"--device=/dev/serial/by-id/usb-Robast_Authentication_NFC_Side_Reader", //Robo module: usb-OEM_TWN4_B1.09_NCF4.06_PRS1.04_B-if00  // Demo module:  usb-OEM_TWN4_B1.09_NCF4.06_PRS1.04-if00 
		"--device=/dev/serial/by-id/usb-Robast_Drawer_Serial_To_CAN" //Robo module: /dev/serial/by-id/usb-Microchip_Technology__Inc._USBtin_A0211324-if00" ,Demo module: /dev/serial/by-id/usb-Microchip_Technology__Inc._USBtin_A0214B02-if00"
	],
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"extensions": [
		"dotjoshjohnson.xml",
		"laurenttreguier.uncrustify",
		"ms-azuretools.vscode-docker",
		"ms-iot.vscode-ros",
		"ms-python.python",
		"ms-vscode.cpptools",
		"redhat.vscode-yaml",
		"smilerobotics.urdf",
		"streetsidesoftware.code-spell-checker",
		"twxs.cmake",
		"yzhang.markdown-all-in-one",
		"jaehyunshim.vscode-ros2"
	]
}