<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4"
      main_tree_to_execute="BehaviorTree">
  <BehaviorTree ID="BehaviorTree">
    <ResetDecorator topic="/reset_simple_tree">
      <BaseErrorDecorator topic="/robast_error">
        <Sequence>
          <OpenDrawer drawer_address="{drawer}"
                      drawer_open_topic="/open_drawer"/>
          <SubTree ID="LED_unlocked"
                   _autoremap="true"/>
          <LEDPublisherAction drawer_address="{drawer}"
                              fading_time_ms="500"
                              led_topic="/led_cmd"
                              leds="{leds}"/>
          <DrawerStatusCondition target_value="true"
                                 topic="/drawer_is_open"/>
          <SubTree ID="LED_Open"
                   _autoremap="true"/>
          <LEDPublisherAction drawer_address="{drawer}"
                              fading_time_ms="500"
                              led_topic="/led_cmd"
                              leds="{leds}"/>
          <DrawerStatusCondition target_value="false"
                                 topic="/drawer_is_open"/>
          <SubTree ID="LED_Close"
                   _autoremap="true"/>
          <LEDPublisherAction drawer_address="{drawer}"
                              fading_time_ms="500"
                              led_topic="/led_cmd"
                              leds="{leds}"/>
          <SubTree ID="LED_Default"
                   _autoremap="true"/>
          <Delay delay_msec="500">
            <LEDPublisherAction drawer_address="{drawer}"
                                fading_time_ms="500"
                                led_topic="/led_cmd"
                                leds="{leds}"/>
          </Delay>
          <SubTree ID="LED_Test"
                   _autoremap="true"/>
          <Delay delay_msec="500">
            <LEDPublisherAction drawer_address="{drawer}"
                                fading_time_ms="500"
                                led_topic="/drawer_leds"
                                leds="{leds}"/>
          </Delay>
        </Sequence>
      </BaseErrorDecorator>
    </ResetDecorator>
  </BehaviorTree>

  <BehaviorTree ID="LED_Close">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="155"
                          brightness="184"
                          green="155"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_Default">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="155"
                          brightness="25"
                          green="155"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_Open">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="128"
                          brightness="184"
                          green="128"
                          lower_bound="0.0"
                          red="128"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_Test">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="200"
                          brightness="20"
                          green="100"
                          lower_bound="0.0"
                          red="50"
                          upper_bound="50.0"
                          LEDs_colored="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="50"
                          brightness="80"
                          green="100"
                          lower_bound="50.0"
                          red="200"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_unlocked">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="105"
                          brightness="150"
                          green="205"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Decorator ID="BaseErrorDecorator">
      <input_port name="topic"
                  default="/robast_error"/>
    </Decorator>
    <Condition ID="DrawerStatusCondition">
      <input_port name="target_value"
                  default="false"/>
      <input_port name="topic"
                  default="/drawer_is_open"/>
    </Condition>
    <Action ID="InitLEDVector">
      <input_port name="size"
                  default="128">uint8_t</input_port>
      <output_port name="led_vector"
                   default="{leds}"/>
    </Action>
    <Action ID="LEDPublisherAction">
      <input_port name="drawer_address"
                  default="{drawer}"/>
      <input_port name="fading_time_ms"
                  default="0">uint8</input_port>
      <input_port name="led_topic"
                  default="/drawer_leds"/>
      <input_port name="leds"
                  default="{leds}"/>
    </Action>
    <Action ID="OpenDrawer">
      <input_port name="drawer_address"
                  default="{drawer}"/>
      <input_port name="drawer_open_topic"
                  default="/open_drawer"/>
    </Action>
    <Action ID="PartialColorizeLED">
      <input_port name="LEDs"
                  default="{leds}"/>
      <input_port name="blue"
                  default="0">uint8</input_port>
      <input_port name="brightness"
                  default="0">uint8 to determine the brightness</input_port>
      <input_port name="green"
                  default="0">uint8</input_port>
      <input_port name="lower_bound"
                  default="0.0">double</input_port>
      <input_port name="red"
                  default="0">uint8</input_port>
      <input_port name="upper_bound"
                  default="0.0">double</input_port>
      <output_port name="LEDs_colored"
                   default="{leds}"/>
    </Action>
    <Decorator ID="ResetDecorator">
      <input_port name="topic"
                  default="/tree_reset"/>
    </Decorator>
  </TreeNodesModel>

</root>
