<?xml version="1.0" encoding="UTF-8"?>
<root BTCPP_format="4">
  <BehaviorTree ID="LED_Close">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="155"
                          brightness="184"
                          green="155"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_Closing">
    <Sequence>
      <partial_drawer_leds DrawerAdress="{DrawerAddress}"
                           LEDBrightnessTop="0"
                           LEDBrightnessMid="0"
                           LEDBrightnessBot="0"/>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="155"
                          brightness="80"
                          green="155"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_Default">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="155"
                          brightness="25"
                          green="155"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_Open">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="0"
                          brightness="0"
                          green="0"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
      <partial_drawer_leds DrawerAdress="{DrawerAddress}"
                           LEDBrightnessTop="255"
                           LEDBrightnessMid="255"
                           LEDBrightnessBot="255"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_Start">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="105"
                          brightness="150"
                          green="205"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="LED_unlocked">
    <Sequence>
      <InitLEDVector size="18"
                     led_vector="{leds}"/>
      <PartialColorizeLED LEDs="{leds}"
                          blue="105"
                          brightness="150"
                          green="205"
                          lower_bound="0.0"
                          red="0"
                          upper_bound="100.0"
                          LEDs_colored="{leds}"/>
    </Sequence>
  </BehaviorTree>

  <BehaviorTree ID="partial_bt">
    <BaseErrorDecorator topic="/robast_error">
      <Sequence>
        <GetBlackboardEntry key="drawer_address"
                            value="{drawer}"/>
        <SubTree ID="LED_Start"
                 _autoremap="true"/>
        <LEDPublisherAction drawer_address="{drawer}"
                            fading_time_ms="500"
                            led_topic="/led_cmd"
                            leds="{leds}"/>
        <Delay delay_msec="1000">
          <MoveElectricDrawer drawer_address="{drawer}"
                              move_electric_drawer_topic="/electrical_drawer_task"
                              speed="255"
                              stall_guard_enable="0"
                              target_position="251"/>
        </Delay>
        <Delay delay_msec="1000">
          <OpenDrawer drawer_address="{drawer}"
                      drawer_open_topic="/open_drawer"/>
        </Delay>
        <SubTree ID="LED_unlocked"
                 _autoremap="true"/>
        <LEDPublisherAction drawer_address="{drawer}"
                            fading_time_ms="500"
                            led_topic="/led_cmd"
                            leds="{leds}"/>
        <ElectricDrawerStatusCondition target_value="251"
                                       topic="/electrical_drawer_status"/>
        <PublishDrawerStatus topic_name="/bt_drawer_open"
                             status="true"
                             drawer_address="{drawer}"/>
        <SubTree ID="LED_Open"
                 _autoremap="true"/>
        <LEDPublisherAction drawer_address="{drawer}"
                            fading_time_ms="100"
                            led_topic="/led_cmd"
                            leds="{leds}"/>
        <DrawerChangeStateReq drawer_address_topic="/close_drawer"
                              drawer_address="{drawer}"/>
        <MoveElectricDrawer drawer_address="{drawer}"
                            move_electric_drawer_topic="/electrical_drawer_task"
                            speed="150"
                            stall_guard_enable="0"
                            target_position="0"/>
        <SubTree ID="LED_Closing"
                 _autoremap="true"/>
        <LEDPublisherAction drawer_address="{drawer}"
                            fading_time_ms="0"
                            led_topic="/led_cmd"
                            leds="{leds}"/>
        <ElectricDrawerStatusCondition target_value="0"
                                       topic="/electrical_drawer_status"/>
        <Sequence>
          <DrawerStatusCondition target_value="false"
                                 topic="/drawer_is_open"/>
          <SubTree ID="LED_Default"
                   _autoremap="true"/>
          <LEDPublisherAction drawer_address="{drawer}"
                              fading_time_ms="500"
                              led_topic="/led_cmd"
                              leds="{leds}"/>
        </Sequence>
        <PublishDrawerStatus topic_name="/bt_drawer_open"
                             status="false"
                             drawer_address="{drawer}"/>
      </Sequence>
    </BaseErrorDecorator>
  </BehaviorTree>

  <!-- Description of Node Models (used by Groot) -->
  <TreeNodesModel>
    <Decorator ID="BaseErrorDecorator">
      <input_port name="topic"
                  default="/robast_error"/>
    </Decorator>
    <Action ID="DrawerChangeStateReq">
      <input_port name="drawer_address_topic"
                  default="/open_request"/>
      <output_port name="drawer_address"
                   default="{drawer}"/>
    </Action>
    <Condition ID="DrawerStatusCondition">
      <input_port name="target_value"
                  default="false"/>
      <input_port name="topic"
                  default="/drawer_is_open"/>
    </Condition>
    <Condition ID="ElectricDrawerStatusCondition">
      <input_port name="target_value"
                  default="0">uint8. wether the value should be true or false</input_port>
      <input_port name="topic"
                  default="/drawer_feedback_status"/>
    </Condition>
    <Action ID="GetBlackboardEntry">
      <input_port name="key"
                  default="drawer_address">string</input_port>
      <output_port name="value"
                   default="{drawer}"/>
    </Action>
    <Action ID="InitLEDVector">
      <input_port name="size"
                  default="128">uint8_t</input_port>
      <output_port name="led_vector"
                   default="{leds}"/>
    </Action>
    <Action ID="LEDPublisherAction">
      <input_port name="drawer_address"
                  default="{drawer}"/>
      <input_port name="fading_time_ms"
                  default="0">uint8</input_port>
      <input_port name="led_topic"
                  default="/drawer_leds"/>
      <input_port name="leds"
                  default="{leds}"/>
    </Action>
    <Action ID="MoveElectricDrawer">
      <input_port name="drawer_address"
                  default="{drawer}"/>
      <input_port name="move_electric_drawer_topic"
                  default="/move_electric_drawer"/>
      <input_port name="speed"
                  default="0">uint8</input_port>
      <input_port name="stall_guard_enable"
                  default="0">uint8</input_port>
      <input_port name="target_position"
                  default="0">uint8</input_port>
    </Action>
    <Action ID="OpenDrawer">
      <input_port name="drawer_address"
                  default="{drawer}"/>
      <input_port name="drawer_open_topic"
                  default="/open_drawer"/>
    </Action>
    <Action ID="PartialColorizeLED">
      <input_port name="LEDs"
                  default="{leds}"/>
      <input_port name="blue"
                  default="0">uint8</input_port>
      <input_port name="brightness"
                  default="0">uint8 to determine the brightness</input_port>
      <input_port name="green"
                  default="0">uint8</input_port>
      <input_port name="lower_bound"
                  default="0.0">double</input_port>
      <input_port name="red"
                  default="0">uint8</input_port>
      <input_port name="upper_bound"
                  default="0.0">double</input_port>
      <output_port name="LEDs_colored"
                   default="{leds}"/>
    </Action>
    <Action ID="PublishDrawerStatus"
            editable="true">
      <input_port name="topic_name"
                  default="/bt_drawer_open"/>
      <input_port name="status"
                  default="false"/>
      <input_port name="drawer_address"
                  default="{drawer}"/>
    </Action>
    <Action ID="partial_drawer_leds"
            editable="true">
      <input_port name="DrawerAdress"
                  default="{DrawerAddress}">Adress of the module and drawer</input_port>
      <input_port name="LEDBrightnessTop"
                  default="255"/>
      <input_port name="LEDBrightnessMid"
                  default="255"/>
      <input_port name="LEDBrightnessBot"
                  default="255"/>
    </Action>
  </TreeNodesModel>

</root>
