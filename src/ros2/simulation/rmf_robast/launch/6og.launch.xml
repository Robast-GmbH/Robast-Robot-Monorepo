<?xml version='1.0' ?>

<launch>
  <arg name="use_sim_time" default="true"/>
  <arg name="failover_mode" default="false"/>
  <arg name="use_tpe" default="false"/>
  <arg name="ignition_version" default='6'/>
  <arg name="headless" default="false" description="do not launch rviz; launch gazebo in headless mode"/>

  <!-- Common launch -->
  <include file="$(find-pkg-share rmf_robast)/6og_rmf.launch.xml">
    <arg name="use_sim_time" value="$(var use_sim_time)"/>
    <arg name="failover_mode" value="$(var failover_mode)"/>
    <arg name="use_tpe" value="$(var use_tpe)"/>
  </include>

  <!-- Simulation launch -->
