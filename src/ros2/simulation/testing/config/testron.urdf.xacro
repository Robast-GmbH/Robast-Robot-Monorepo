<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="testron">
    <xacro:arg name="initial_positions_file" default="initial_positions.yaml" />

    <!-- Import testron urdf file -->
    <xacro:include filename="$(find rb_theron_description)/robots/tobi_test.urdf" />

    <!-- Import control_xacro -->
    <xacro:include filename="testron.ros2_control.xacro" />


    <xacro:testron_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>

</robot>
