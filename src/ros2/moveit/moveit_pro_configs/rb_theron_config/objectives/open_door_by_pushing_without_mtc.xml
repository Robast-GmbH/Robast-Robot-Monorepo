<?xml version='1.0' encoding='UTF-8'?>
<root BTCPP_format="4" main_tree_to_execute="Open door by pushing without mtc">
  <!--//////////-->
  <BehaviorTree ID="Open door by pushing without mtc" _description="Opens a door by pushing it open." _favorite="false" _hardcoded="false">
    <Control ID="Sequence" name="TopLevelSequence">
      <Decorator ID="RetryUntilSuccessful" num_attempts="20">
        <Decorator ID="Delay" delay_msec="1000">
          <Control ID="Sequence">
            <Action ID="GetSpatialDetectionsFromTopic"/>
            <Action ID="CreatePoseFromSpatialDetections" pose_stamped_out="{door_handle_pose}"/>
            <Action ID="PublishPoseToTopic" pose_stamped_in="{door_handle_pose}"/>
          </Control>
        </Decorator>
      </Decorator>
      <Control ID="Sequence">
        <Action ID="CreateStampedPose" stamped_pose="{transform_pose}" reference_frame="rb_theron/base_footprint/back_top_realsense_camera_color_link" position_xyz="0;-0.15;-0.15"/>
        <Action ID="TransformPoseWithPose" input_pose="{door_handle_pose}" output_pose="{pose_in_front_of_door_handle}"/>
        <Action ID="PublishPoseToTopic" pose_stamped_in="{pose_in_front_of_door_handle}"/>
      </Control>
      <Action ID="AddPoseStampedToVector" input="{pose_in_front_of_door_handle}" vector="{pose_stamped_vector}"/>
      <Action ID="PlanCartesianPath" path="{pose_stamped_vector}" planning_group_name="mobile_base_arm" tip_link="door_opening_mechanism_link_freely_rotating_hook" tip_offset="0.0;0.0;0.0" position_only="true" blending_radius="0.02" velocity_scale_factor="1.0" acceleration_scale_factor="1.0" trajectory_sampling_rate="100" joint_trajectory_msg="{joint_trajectory_msg}" debug_solution="{debug_solution}"/>
      <Action ID="GetCurrentPlanningScene" planning_scene_msg="{planning_scene_msg}"/>
      <Action ID="ValidateTrajectory" planning_scene_msg="{planning_scene_msg}" planning_group_name="mobile_base_arm" joint_trajectory_msg="{joint_trajectory_msg}" joint_space_step="0.05" cartesian_space_step="0.02" debug_solution="{debug_solution}"/>
      <Action ID="ExecuteFollowJointTrajectory" execute_follow_joint_trajectory_action_name="/joint_trajectory_controller/follow_joint_trajectory" joint_trajectory_msg="{joint_trajectory_msg}"/>
    </Control>
  </BehaviorTree>
</root>
