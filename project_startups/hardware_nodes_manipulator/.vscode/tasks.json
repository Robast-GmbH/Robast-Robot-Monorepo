            "command": "source install/setup.bash; ros2 topic pub /control_norelem_stepper communication_interfaces/msg/NorelemStepperControl '{drawer_controller_id: 6, motor_id: 3, motor_e1: 1, motor_e2: 0, motor_e3: 0, motor_e4: 0}' --once",
            "problemMatcher": []
        },
        {
            "label": "Test",
            "detail": "Build and executes all tests and shows the links to the testreport with Errors",
            "type": "shell",
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "command": "source install/setup.bash; colcon test --event-handler=console_direct+; colcon test-result --all",
            "problemMatcher": []
        },
        {
            "label": "Test nfc gate",
            "detail": "Build and executes nfc gate tests and shows the links to the testreport with Errors",
            "type": "shell",
            "dependsOn": [
                "build"
            ],
            "dependsOrder": "sequence",
            "command": "clear; source install/setup.bash; colcon test --packages-select nfc_gate --event-handler=console_direct+; colcon test-result --all",
            "problemMatcher": []
        },
        {
            "label": "clean-build",
            "detail": "Purges and symlink colcon build",
            "dependsOn": [
                "purge",
                "build"
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        },
        {
            "label": "purge",
            "detail": "Purge workspace by deleting all generated files.",
            "type": "shell",
            "command": "rm -fr build install log; py3clean .",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "package",
            "type": "promptString",
            "description": "Package name"
        }
    ]
}