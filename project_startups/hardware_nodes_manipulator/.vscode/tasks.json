            "command": "source install/setup.bash; ros2 topic pub /control_norelem_stepper communication_interfaces/msg/NorelemStepperControl '{drawer_controller_id: 6, motor_id: 3, motor_e1: 1, motor_e2: 1, motor_e3: 0, motor_e4: 0}' --once",
            "problemMatcher": []
