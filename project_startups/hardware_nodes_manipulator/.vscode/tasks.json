    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "detail": "Symlink Build.",
            "type": "shell",
            "command": "source ~/../../opt/ros/humble/setup.bash; colcon build --symlink-install --cmake-args '-DCMAKE_BUILD_TYPE=RelWithDebInfo' -Wall -Wextra -Wpedantic",
            "problemMatcher": []
        },
        {
            "label": "Launch Drawer Gate",
            "detail": "Launch the drawer gate node",
            "type": "shell",
            "command": "source install/setup.bash; ros2 launch drawer_gate drawer_gate_launch.py",
            "problemMatcher": []
        },
        {
            "label": "Launch Door Maniplator Gate",
            "detail": "Launch the door manipulator gate node",
            "type": "shell",
            "command": "source install/setup.bash; ros2 launch door_manipulator_gate door_manipulator_gate_launch.py",
            "problemMatcher": []
        },
        {
            "label": "Launch Door Maniplator Sim",
            "detail": "Launch the door manipulator Sim node",
            "type": "shell",
            "command": "source install/setup.bash; ros2 run door_manipulator_sim door_manipulator_sim"j,
            "problemMatcher": []
        },
        {
            "label": "Move Norelem Stepper 1 forward slow",
            "detail": "Send topic message to move the norelem stepper motor 1 forward",
            "type": "shell",
            "command": "source install/setup.bash; ros2 topic pub /control_norelem_stepper communication_interfaces/msg/NorelemStepperControl '{drawer_controller_id: 6, motor_id: 1, motor_e1: 0, motor_e2: 1, motor_e3: 0, motor_e4: 0}' --once",
            "problemMatcher": []
        },
        {
            "label": "Move Norelem Stepper 1 backward slow",
            "detail": "Send topic message to move the norelem stepper motor 1 backward",
            "type": "shell",
            "command": "source install/setup.bash; ros2 topic pub /control_norelem_stepper communication_interfaces/msg/NorelemStepperControl '{drawer_controller_id: 6, motor_id: 1, motor_e1: 1, motor_e2: 1, motor_e3: 0, motor_e4: 0}' --once",
            "problemMatcher": []
        },
        {
            "label": "Stop Norelem Stepper 1 motion",
            "detail": "Send topic message to stop the norelem stepper motor 1 motion",
            "type": "shell",
            "command": "source install/setup.bash; ros2 topic pub /control_norelem_stepper communication_interfaces/msg/NorelemStepperControl '{drawer_controller_id: 6, motor_id: 1, motor_e1: 1, motor_e2: 0, motor_e3: 0, motor_e4: 0}' --once",
            "problemMatcher": []
        },
        {
            "label": "Move Norelem Stepper 2 forward slow",
            "detail": "Send topic message to move the norelem stepper motor 2 forward",
            "type": "shell",
