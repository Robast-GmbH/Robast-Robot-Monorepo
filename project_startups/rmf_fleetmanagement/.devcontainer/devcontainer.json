{

	"image": "ghcr.io/robast-gmbh/monorepo/rmf:hagen",
	"remoteUser": "ubuntu",
	"workspaceMount": "source=${localWorkspaceFolder}/,target=/workspace/,type=bind",
	"mounts": [
		"source=${localWorkspaceFolder}/../../src/ros2/rmf/,target=/workspace/src/rmf,type=bind",
		"source=${localWorkspaceFolder}/../../src/ros2/communication_interfaces/,target=/workspace/src/communication_interfaces,type=bind",
		"source=${localWorkspaceFolder}/../../src/ros2/dds_configs,target=/workspace/dds_configs,type=bind",
		"source=/dev/shm,target=/dev/shm,type=bind"

	],
	"workspaceFolder": "/workspace",
	"runArgs": [
		"--name=rmf",
		"--network=host"
	],
	"remoteEnv": {
		"RMW_IMPLEMENTATION":"rmw_fastrtps_cpp",
		"FASTRTPS_DEFAULT_PROFILES_FILE": "/workspace/dds_configs/fast_DDS_config.xml",
 		"CYCLONEDDS_URI":"/workspace/dds_configs/cyclone_DDS_config.xml",
		 "DISPLAY": "${localEnv:DISPLAY}"
	},
	"remoteUser": "robast",
	// "postStartCommand": ". /workspace/.devcontainer/entrypoint.sh",
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"extensions": [
		"dotjoshjohnson.xml",
		"laurenttreguier.uncrustify",		
		"ms-python.python",
		"ms-vscode.cpptools",
		"streetsidesoftware.code-spell-checker",
		"twxs.cmake",
		"yzhang.markdown-all-in-one",
		"jaehyunshim.vscode-ros2",
		"tomoki1207.pdf"
	]
}
