{
    "version": "0.2.0",
    "configurations": [
            {
                    "name": "C++ Debugger",
                    "request": "launch",
                    "type": "cppdbg",
                    "miDebuggerServerAddress": "localhost:3000",
                    "cwd": "${workspaceFolder}",
                    "program": "/workspace/install/drawer_sm/lib/drawer_sm/drawer_sm2",
                    "miDebuggerPath": "/usr/bin/gdb"
            },
            {
                "name": "(gdb) Launch",
                "type": "cppdbg",
                "request": "launch",
                "program": "${workspaceFolder}/install/${input:package}/lib/${input:package}/${input:program}",
                "args": [],
                "preLaunchTask": "debug_build",
                "stopAtEntry": true,
                "cwd": "${workspaceFolder}",
                "externalConsole": false,
                "MIMode": "gdb",
                "setupCommands": [
                  {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                  }
                ]
              }
            ],
            "inputs": [
              {
                "id": "package",
                "type": "promptString",
                "description": "Package name",
                "default": "drawer_sm"
              },
              {
                "id": "program",
                "type": "promptString",
                "description": "Program name",
                "default": "drawer_sm2"
              }
    ]
}