// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"dockerFile": "../../../src/ros2/state_machine_plan_sys/Dockerfile",
	"build": {
		"args": {
			"WORKSPACE": "${containerWorkspaceFolder}"
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder}/,target=/workspace/,type=bind",
	"mounts": [
		"source=${localWorkspaceFolder}/../../src/ros2/state_machine_plan_sys/,target=/workspace/src/state_machine_plan_sys,type=bind",
		"source=${localWorkspaceFolder}/../../src/ros2/communication_interfaces/,target=/workspace/src/communication_interfaces,type=bind",
	],
	"workspaceFolder": "/workspace",
	"remoteUser": "robast",
	"runArgs": [
		"--name=state_machine_plan_sys",
		"--network=host",
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix",
		"--cpus=24",
		"--memory=20g"
	],
	"remoteEnv": {"DISPLAY": "${localEnv:DISPLAY}"},
	"postStartCommand": "/workspace/.devcontainer/entrypoint.sh",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"extensions": [
		"dotjoshjohnson.xml",
		"laurenttreguier.uncrustify",
		"ms-azuretools.vscode-docker",
		"ms-iot.vscode-ros",
		"ms-python.python",
		"ms-vscode.cpptools",
		"redhat.vscode-yaml",
		"smilerobotics.urdf",
		"streetsidesoftware.code-spell-checker",
		"twxs.cmake",
		"yzhang.markdown-all-in-one",
		"jan-dolejsi.pddl"
	]
}
