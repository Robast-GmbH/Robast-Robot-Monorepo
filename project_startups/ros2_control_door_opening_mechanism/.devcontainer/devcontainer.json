// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"dockerFile": "../../../src/ros2/ros2_control/Dockerfile",
	"build": {
		"args": {
			"WORKSPACE": "${containerWorkspaceFolder}"
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder}/,target=/workspace/,type=bind",
	"mounts": [
		"source=${localWorkspaceFolder}/../../src/ros2/hardware_nodes/dryve_d1_bridge,target=/workspace/src/hardware_nodes/dryve_d1_bridge,type=bind",
		"source=${localWorkspaceFolder}/../../src/ros2/robot_description,target=/workspace/src/robot_description,type=bind",
		"source=${localWorkspaceFolder}/../../src/ros2/ros2_control,target=/workspace/src/ros2_control,type=bind",
	],
	"workspaceFolder": "/workspace",
	"remoteUser": "robast",
	"runArgs": [
		"--name=ros2_control_door_opening_mechanism",
		"--network=host",
		"--volume=/dev/shm:/dev/shm", //needed if you use the fast dds on the host network with multiple docker containers running on the same host
		//"--device=/dev/robast/robast_nfc", //Robo module: usb-OEM_TWN4_B1.09_NCF4.06_PRS1.04_B-if00  // Demo module:  usb-OEM_TWN4_B1.09_NCF4.06_PRS1.04-if00 
		"--volume=/tmp/.X11-unix:/tmp/.X11-unix"
	],
	"containerEnv": {
		"ROS_DOMAIN_ID": "1",
		"robot": "rb_theron"
	},
	"postStartCommand": "/workspace/.devcontainer/entrypoint.sh",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"extensions": [
		"dotjoshjohnson.xml",
		"laurenttreguier.uncrustify",
		"ms-azuretools.vscode-docker",
		"ms-iot.vscode-ros",
		"ms-python.python",
		"ms-vscode.cpptools",
		"redhat.vscode-yaml",
		"smilerobotics.urdf",
		"streetsidesoftware.code-spell-checker",
		"twxs.cmake",
		"yzhang.markdown-all-in-one"
	]
}