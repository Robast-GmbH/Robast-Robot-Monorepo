    // Autocomplete from ros python packages
    "python.autoComplete.extraPaths": [
        "/opt/ros/galactic/lib/python3.8/site-packages/"
    ],
    // Environment file lets vscode find python files within workspace
    "python.envFile": "${workspaceFolder}/.env",
    // Use the system installed version of autopep8
    "python.formatting.autopep8Path": "/usr/bin/autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length=120"
    ],
    "C_Cpp.default.intelliSenseMode": "clang-x64",
    "C_Cpp.formatting": "Disabled",
    "uncrustify.useReplaceOption": true,
    "uncrustify.configPath.linux": "/opt/ros/galactic/lib/python3.8/site-packages/ament_uncrustify/configuration/ament_code_style.cfg",
    "[cpp]": {
        "editor.defaultFormatter": "LaurentTreguier.uncrustify"
    },
    "cSpell.words": [
        "athackst",
        "autopep",
        "cmake",
        "costmap",
        "cppcheck",
        "cpplint",
        "deque",
        "devcontainer",
        "ints",
        "noqa",
        "pytest",
        "rclcpp",
        "rclpy",
        "repos",
        "rosidl",
        "uncrustify",
        "xmllint"
    ],
    "python.formatting.autopep8Path": "/usr/bin/autopep8",
    "python.formatting.autopep8Args": [
        "--max-line-length=100"
    ],
    "files.autoSave": "onFocusChange",
    "editor.tabSize": 4,
    "editor.rulers": [
        100
    ],
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.organizeImports": true
    },
    "editor.minimap.autohide": true,
    "c-cpp-flylint.clang.defines": [
    ],
    "editor.formatOnSave": false,
    "C_Cpp.formatting": "vcFormat",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.block": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.function": "newLine",
    "C_Cpp.vcFormat.newLine.beforeOpenBrace.namespace": "newLine",
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyFunction": true,
    "C_Cpp.vcFormat.newLine.closeBraceSameLine.emptyType": true,
    "C_Cpp.vcFormat.space.betweenEmptySquareBrackets": true,
    "cSpell.allowCompoundWords": true,
    "editor.formatOnType": true,
    "python.analysis.extraPaths": [
        "/opt/ros/galactic/lib/python3.8/site-packages/"
    ]
