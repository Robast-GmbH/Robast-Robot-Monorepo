// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
	"image": "ghcr.io/robast-gmbh/monorepo/navigation:hagen",
	"remoteUser": "ubuntu",
	"workspaceMount": "source=${localWorkspaceFolder}/,target=/workspace/,type=bind",
	"mounts": [
		"source=${localWorkspaceFolder}/../../src/ros2/navigation/,target=/workspace/src/navigation,type=bind",
		"source=${localWorkspaceFolder}/../../src/ros2/communication_interfaces/,target=/workspace/src/communication_interfaces,type=bind",
		"source=${localWorkspaceFolder}/../../src/ros2/dds_configs,target=/workspace/dds_configs,type=bind"
	],
	"workspaceFolder": "/workspace",
	"runArgs": [
                "--name=navigation",
                "--network=host",
                "--volume=/dev/shm:/dev/shm",
				"-e is_simulation=true",
				"-e config_directory=config_simulation",
				"-e robot_name=rb_theron",
				"-e init_x=1.46",
				"-e init_y=-2.89",
				"-e init_z=0.0",
				"-e init_yaw=1.57",
				"-e FASTRTPS_DEFAULT_PROFILES_FILE=/workspace/dds_configs/fast_DDS_config_shm.xml"
        ],
	"remoteEnv": {
			"is_simulation": "true",
			"config_directory": "config_simulation",
			"robot_name": "rb_theron",
			"init_x": "1.46",
			"init_y":"-2.89",
			"init_z":"0.0",
			"init_yaw":"1.57"
		},
	"postStartCommand": "/workspace/.devcontainer/entrypoint.sh",
	// Set *default* container specific settings.json values on container create.
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},
	"extensions": [
		"dotjoshjohnson.xml",
		"laurenttreguier.uncrustify",
		"ms-azuretools.vscode-docker",
		"ms-iot.vscode-ros",
		"ms-python.python",
		"ms-vscode.cpptools",
		"redhat.vscode-yaml",
		"smilerobotics.urdf",
		"streetsidesoftware.code-spell-checker",
		"twxs.cmake",
		"yzhang.markdown-all-in-one"
	]
}
